<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/cvBooking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="10sp">

            <ImageView
                android:id="@+id/ivBooking"
                android:layout_width="370dp"
                android:layout_height="175dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/booking" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_alignRight="@+id/ivBooking"
                android:layout_alignBottom="@+id/ivBooking"
                android:src="@drawable/heart"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/black2"
            android:layout_weight="1"
            android:text="Dumbbell rows"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:textColor="@color/black2"
            android:layout_weight="1"
            android:text="$25/hour"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/location_icon_booking"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:textSize="13sp"
                android:textColor="@color/black2"
                android:layout_weight="1"
                android:text="New York"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:fontFamily="@font/poppins_regular"
                android:text="22th Feb,2022"
                android:textColor="@color/black2"
                android:textSize="13sp" />

        </LinearLayout>



    </LinearLayout>

    </androidx.cardview.widget.CardView>

